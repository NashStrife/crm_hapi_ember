<section class="view-content">
    <h2>Nouvelle Facture</h2>
    <form>
        <fieldset class="references">
            <legend>Vos références</legend>
            <ul>
                <li>
                    <label for="number">N° de facture</label><br>
                    {{input type="text" id="number" value=model.number}}
                </li>
                <li>
                    <label for="date">Date de facture</label><br>
                    {{input type="date" id="date" value=model.date}}
                </li>
            </ul>
        </fieldset>

        <fieldset class="references-cl">
            <legend>Références Client</legend>
            <ul>
                <li>
                    <label for="client">Client</label><br>
                    {{input type="text" id="client" value=model.client}}
                    {{!--{{#x-select id="client" value=model.client}}
                        {{#each clients as |client|}}
                            {{#x-option value=client.id}}{{client.name}}{{/x-option}}
                        {{/each}}
                    {{/x-select}}--}}
                </li>
            </ul>
        </fieldset>

        <fieldset class="object">
            <legend>Objet</legend>
            <ul>
                <li>
                    <label for="project-name">Nom du projet</label><br>
                    {{input type="text" id="project-name" value=model.project.name}}
                </li>
                <li>
                    <label for="project-begin">Date de début</label><br>
                    {{input type="text" id="project-begin" value=model.project.begin}}
                </li>
                <li>
                    <label for="project-end">Date de fin</label><br>
                    {{input type="text" id="project-end" value=model.project.end}}
                </li>
            </ul>
        </fieldset>

        <fieldset class="detail">
            <legend>Détail</legend>
            <div class="articles">
                <ul>
                    <li class="article-name">
                        <label for="article-name">Article</label><br>
                        {{input type="text" id="article-name" value=model.details.articles.name}}
                    </li>
                    
                    <li class="article-description">
                        <label for="article-description">Description</label><br>
                        {{input type="text" id="article-description" value=model.details.articles.description}}
                    </li>

                    <li class="article-type">
                        <label for="article-type">Type</label><br>
                        {{input type="text" id="article-type" value=model.details.articles.type}}
                    </li>

                    <li class="article-quantity">
                        <label for="article-quantity">Qté</label><br>
                        {{input type="text" id="article-quantity" value=model.details.articles.quantity}}
                    </li>

                    <li class="article-price">
                        <label for="article-price">P/U</label><br>
                        {{input type="text" id="article-price" value=model.details.articles.price}}
                    </li>

                    <li class="article-amount">
                        <label for="article-amount">Montant</label><br>
                        {{input type="text" id="article-amount" value=model.details.articles.amount}}
                    </li>

                    <li class="article-vat">
                        <label for="article-vat">TVA</label><br>
                        {{input type="text" id="article-vat" value=model.details.articles.vat}}
                    </li>
                </ul>
            </div>
            <div class="tots">
                <ul>
                    <li>
                        <label for="article-totxvat">Total hors taxes</label>
                        {{input type="text" id="article-totxvat" value=model.details.totxvat}}
                    </li>
                    <li class="article-refund">
                        <label for="article-refund">Ristourne</label>
                        {{input type="text" id="article-refund" value=model.details.refund}}
                        {{input type="text" id="article-refundtype" value=model.details.refundtype}}
                    </li>
                    <li>
                        <label for="article-utotxvat">Sous-Total hors taxes</label>
                        {{input type="text" id="article-utotxvat" value=model.details.utotxvat}}
                    </li>
                    <li>
                        <label for="article-vat">TVA</label>
                        {{input type="text" id="article-vat" value=model.details.vat}}
                    </li>
                    <li class="article-utotal">
                        <label for="article-utotal">Total TTC</label>
                        {{input type="text" id="article-utotal" value=model.details.utotal}}
                    </li>
                    <li>
                        <label for="article-advance">Accompte</label>
                        {{input type="text" id="article-advance" value=model.details.advance}}
                    </li>
                    <li class="article-total">
                        <label for="article-total">A payer</label>
                        {{input type="text" id="article-total" value=model.details.total}}
                    </li>
                </ul>
            </div>
        </fieldset>

        <fieldset class="infos">
            <legend>Informations et règles de paiement</legend>
            <ul>
                <li>
                    <label for="deadline">Echéance</label><br>
                    {{input type="text" id="deadline" value=model.deadline}}
                </li>
                <li>
                    <label for="primaccount">Mode de paiement principal</label><br>
                    {{input type="text" id="primaccount" value=model.primaccount}}
                </li>
                <li>
                    <label for="secaccount">Mode de paiement secondaire</label><br>
                    {{input type="text" id="secaccount" value=model.secaccount}}
                </li>
                <li>
                    <label for="note">Notes</label><br>
                    {{textarea id="note" value=model.note cols="100" rows="6"}}
                </li>
            </ul>
        </fieldset>
        
        {{input type="submit" value="Créer"}}
        
    </form>
</section>